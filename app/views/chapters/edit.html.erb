<div class="container mb-5 mt-5">
    <div class="columns is-centered">
      <div class="column is-half">
        <div class="box bg-transparent">
          <div class="manga-form">
            <%= form_with model: [@manga, @chapter], url: manga_chapter_path(@manga.title, @chapter.chapter_number), method: :patch, local: true do |f| %>
              <div class="field">
                <%= f.label :chapter_number %>
                <%= f.number_field :chapter_number, value: @chapter.chapter_number, class: "input bg-transparent"  %>
              </div>
              <div class="field">
                <%= f.label :images, "Chapter Images URL" %>
                <%= f.text_area :images, value: @chapter.images, class: "textarea bg-transparent", rows: 10 %>
              </div>
              <%= f.submit "Update Chapter", class: "button bg-transparent", data: {
                controller: "confirm",
                action: "confirm#confirm",
                confirm_title_value: "Update?",
                confirm_message_value: "Do you want to save the changes?",
                confirm_confirm_text_value: "Yes, update it!",
                confirm_button_color_value: "#171515"
              } %>
            <% end %>
          </div>
        </div>
          <%= link_to "Back to Manga", manga_chapter_path(@manga.title, @chapter.chapter_number), class: "button bg-tansparent" %>
      </div>
    </div>
</div>