<div class="box bg-full-transparent">
  <h2 class="title has-text-white has-text-centered">
    <i class="fas fa-user-plus"></i> Registration
  </h2>

  <div class="columns is-centered">
    <div class="column is-one-third">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "box bg-transparent" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <br>

        <div class="field">
          <div class="control has-icons-left has-icons-right">
            <%= f.text_field :username, autofocus: true, class: "input is-rounded bg-full-transparent", placeholder: "Username" %>
            <span class="icon is-small is-left">
              <i class="fas fa-user"></i>
            </span>
          </div>
        </div>


        <div class="field">
          <div class="control has-icons-left has-icons-right">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-rounded bg-full-transparent", placeholder: "Email" %>
            <span class="icon is-small is-left">
              <i class="fa fa-envelope"></i>
            </span>
          </div>
        </div>

        <div class="field">
          <div class="control has-icons-left has-icons-right">
            <%= f.password_field :password, autocomplete: "new-password", class: "input is-rounded bg-full-transparent", placeholder: "Password", id: "password-field" %>
            <span class="icon is-small is-left">
              <i class="fa fa-lock"></i>
            </span>
            <span class="icon is-small is-right toggle-password" style="pointer-events: all; cursor: pointer">
              <i class="fa fa-fw fa-eye"></i>
            </span>
          </div>
        </div>

        <div class="field">
          <div class="control has-icons-left has-icons-right">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-rounded bg-full-transparent", placeholder: "Password Confirmation", id: "password-confirmation-field" %>
            <span class="icon is-small is-left">
              <i class="fa fa-lock"></i>
            </span>
            <span class="icon is-small is-right toggle-password" style="pointer-events: all; cursor: pointer">
              <i class="fa fa-fw fa-eye"></i>
            </span>
          </div>
        </div>

        <div class="field">
          <label class="checkbox">
            <input type="checkbox" />
            Term and Condition
          </label>
        </div>

        <div class="field">
          <div class="control">
            <%= f.submit "Sign Up", class: "button is-fullwidth is-rounded" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="field">
    <div class="has-text-centered mt-3">
      <a href="/users/sign_in">Login</a><br>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
  $(document).ready(function () {
    $(".toggle-password").click(function () {
      let input = $(this).siblings("input");
      let icon = $(this).find("i");

      if (input.attr("type") === "password") {
        input.attr("type", "text");
        icon.removeClass("fa-eye").addClass("fa-eye-slash");
      } else {
        input.attr("type", "password");
        icon.removeClass("fa-eye-slash").addClass("fa-eye");
      }
    });
  });
</script>
