<div class="box bg-full-transparent has-text-white">
  <h3 class="title is-5"><i class="fas fa-bookmark"></i> Bookmarked Manga</h3>
  
  <% if @bookmarked_mangas&.any? %>
    <div class="bookmark-list">
      <% @bookmarked_mangas.each do |manga| %>
        <div class="bookmark-item">
          <div class="bookmark-image">
            <%= link_to manga_path(manga) do %>
              <img src="<%= manga.image_cover %>" alt="<%= manga.title %>" class="manga-thumbnail">
            <% end %>
          </div>
          <div class="bookmark-info">
            <p class="is-size-5 mb-2">
              <%= link_to manga.title, manga_path(manga), class: "has-text-white" %>
            </p>
            <p class="is-size-7 has-text-grey-lighter">
              <span class="icon is-small mr-1"><i class="fas fa-star"></i></span> Rating: <%= manga.rating %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="pagination-wrapper">
      <%= paginate @bookmarked_mangas %>
    </div>
  <% else %>
    <p>You haven't bookmarked any manga yet.</p>
  <% end %>
</div>