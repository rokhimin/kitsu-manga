<% content_for :title, "Mangas" %>

<h1>Mangas</h1>

<div id="mangas">
  <% if @mangas.any? %>
    <% @mangas.each do |manga| %>
      <div class="manga-card">
        <% if manga.image_cover.present? %>
          <img src="<%= manga.image_cover %>" alt="<%= manga.title %> Cover" class="manga-cover">
        <% end %>
        <h2><%= manga.title %></h2>
        <p><strong>Author:</strong> <%= manga.author %></p>
        <p><strong>Genre:</strong> <%= manga.genre %></p>
        <p><strong>Status:</strong> <%= manga.status %></p>
        <p>
          <%= link_to "Show this manga", manga, class: "btn btn-primary" %>
          <%= link_to "Edit", edit_manga_path(manga), class: "btn btn-secondary" %>
          <%= button_to "Delete", manga, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </p>
      </div>
    <% end %>
  <% else %>
    <p>No mangas available.</p>
  <% end %>
</div>

<%= link_to "New manga", new_manga_path, class: "btn btn-success" %>

