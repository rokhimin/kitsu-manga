<div class="container">
  <div class="manga-container bg-transparent">
    <!-- Cover Manga -->
    <div class="manga-cover">
      <% if @manga.image_cover.present? %>
        <img src="<%= @manga.image_cover %>" alt="<%= @manga.title %> Cover">
      <% end %>
    </div>
    <!-- Detail Manga -->
    <div class="manga-details">
      <h1><%= @manga.title %></h1>
      <p class="manga-info"><strong>Alternative Title:</strong> <%= @manga.alternative_title %></p>
      <p class="manga-info"><strong>Status:</strong> <%= @manga.status %></p>
      <p class="manga-info"><strong>Type:</strong> <%= @manga.manga_type %></p>
      <p class="manga-info"><strong>Series:</strong> <%= @manga.series %></p>
      <p class="manga-info"><strong>Author:</strong> <%= @manga.author %></p>
      <p class="manga-info"><strong>Rating:</strong> ‚≠ê <%= @manga.rating %>/10</p>
      <p class="manga-info"><strong>Created Date:</strong> <%= @manga.created_at.strftime("%d %B %Y") %></p>
      <p class="manga-info"><strong>Genre:</strong> 
          <% @manga.genre.split(',').map(&:strip).each_with_index do |genre, index| %>
          <%= link_to genre, "/manga/genre/#{ERB::Util.url_encode(genre)}" %><%= ", " unless index == @manga.genre.split(',').size - 1 %>
          <% end %>
      </p>
      <div class="manga-actions">
        <% if user_signed_in? %>
          <% if current_user.bookmarked_mangas.include?(@manga) %>
            <%= button_to manga_bookmark_path(@manga), method: :delete, class: "button bg-transparent" do %>
              <i class="fa fa-bookmark"></i> Unbookmark
            <% end %>
          <% else %>
            <%= button_to manga_bookmark_path(@manga), method: :post, class: "button bg-transparent" do %>
              <i class="fa fa-bookmark"></i> Bookmark
            <% end %>
          <% end %>
        <% end %>
        <% if current_user&.admin? %>
          <a href="<%= @manga.title %>/chapter/new" class="button bg-transparent">New</a>
          <%= link_to "Edit", edit_manga_path(@manga.title), class: "button bg-transparent" %>
          <%= button_to "Delete", @manga, method: :delete, class: "button bg-transparent", onclick: "return confirm('Are you sure you want to delete this manga?');" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="box bg-transparent">
    <div class="article">
      <h1 class="manga-info"><strong>Synopsis</strong></h1>
      <p><%= @manga.synopsis %></p>
    </div>
  </div>
  <!-- Chapter List -->
  <div class="box bg-transparent">
    <div class="chapter-list">
      <h2>üìñ Chapters</h2>
      <div class="chapters-scroll-container">
        <ul>
          <% @chapters.each do |chapter| %>
            <li>
              <%= link_to "Chapter #{chapter.chapter_number}", manga_chapter_path(@manga.title, chapter.chapter_number) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<style>
  .container {
    padding: 10px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .manga-container {
    display: grid;
    grid-template-columns: 250px 1fr;
    gap: 20px;
    padding: 20px;
    color: #fff;
    border-radius: 8px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
    margin-top: 16px;
  }

  .manga-cover img {
    width: 100%;
    border-radius: 6px;
  }

  .manga-details {
    display: flex;
    flex-direction: column;
  }

  .manga-details h1 {
    font-size: 1.8rem;
    font-weight: bold;
    color: #ffffff;
  }

  .manga-info {
    font-size: 0.95rem;
    margin-bottom: 5px;
  }

  .manga-info strong {
    color: #ffffff;
    font-weight: bold;
  }

  .manga-actions {
    margin-top: 15px;
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .button {
    padding: 8px 16px;
    border-radius: 4px;
    border: 1px solid #ffffff;
    color: #ffffff;
    cursor: pointer;
    font-weight: bold;
    text-decoration: none;
    display: inline-block;
  }

  .button:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .chapter-list {
    margin-top: 20px;
    padding: 15px;
    background: bg-transparent;
    border-radius: 6px;
    margin-bottom: 16px;
  }

  .chapter-list h2 {
    color: #ffffff;
    font-weight: bold;
    font-size: 1.5rem;
    margin-bottom: 10px;
  }

  .chapters-scroll-container {
    max-height: 300px;
    overflow-y: auto;
    scrollbar-width: thin;
    scrollbar-color: #ffffff #282828;
  }

  .chapters-scroll-container::-webkit-scrollbar {
    width: 6px;
  }

  .chapters-scroll-container::-webkit-scrollbar-track {
    background: #282828;
    border-radius: 3px;
  }

  .chapters-scroll-container::-webkit-scrollbar-thumb {
    background-color: #ffffff;
    border-radius: 3px;
  }

  .chapter-list ul {
    list-style: none;
    padding: 0;
  }

  .chapter-list li {
    padding: 8px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .chapter-list a {
    color: #ffffff;
    font-weight: bold;
    transition: color 0.3s;
    display: block;
    width: 100%;
  }

  .chapter-list a:hover {
    color: #cccccc;
  }

  /* Responsive design */
  @media screen and (max-width: 768px) {
    .manga-container {
      grid-template-columns: 1fr;
    }

    .manga-cover {
      max-width: 200px;
      margin: 0 auto;
    }

    .manga-details h1 {
      text-align: center;
      margin-top: 10px;
    }

  }

  @media screen and (max-width: 480px) {
    .manga-container {
      padding: 10px;
    }

    .manga-details h1 {
      font-size: 1.5rem;
    }

    .chapter-list {
      padding: 10px;
    }
  }

  .box {
    padding: 15px;
    margin-top: 20px;
    border-radius: 6px;
  }

  .article h1 {
    color: #ffffff;
    font-weight: bold;
    font-size: 1.5rem;
    margin-bottom: 10px;
  }
</style>