<%= form_with model: @manga, local: true, html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :alternative_title, "Alternative Title" %>
    <%= f.text_field :alternative_title, class: "form-control", maxlength: 255 %>
  </div>

  <div class="form-group">
    <%= f.label :image_cover, "Image Cover" %>
    <%= f.text_field :image_cover, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :status, "Status" %>
    <%= f.select :status, ["Ongoing", "Completed", "Hiatus", "Dropped"], {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :manga_type, "Manga Type" %>
    <%= f.select :manga_type, ["Shonen", "Seinen", "Shoujo", "Josei", "Kodomo"], {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :series, "Series" %>
    <%= f.text_field :series, class: "form-control", placeholder: "Enter series name if available" %>
  </div>

  <div class="form-group">
    <%= f.label :author, "Author" %>
    <%= f.text_field :author, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :rating, "Rating" %>
    <%= f.number_field :rating, step: 0.1, min: 0, max: 10, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :created_date, "Created Date" %>
    <%= f.date_field :created_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :genre, "Genre" %>
    <%= f.text_field :genre, placeholder: "Separated by commas", class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
    <%= button_to "Cancel", mangas_path, class: "btn btn-secondary", method: :get %>
  </div>
<% end %>
