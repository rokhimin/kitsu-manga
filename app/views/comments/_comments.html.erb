<% comments.each do |comment| %>
  <div class="box bg-transparent" id="<%= dom_id(comment) %>">
    <div class="level">
      <div class="level-left">
        <strong><%= comment.user.username %></strong>
        <small class="ml-3 has-text-grey is-size-7"><%= time_ago_in_words(comment.created_at) %> ago</small>
      </div>
      <% if comment.user == current_user || current_user.admin? %>
        <div class="level-right">
          <%= button_to manga_chapter_comment_path(
                comment.chapter.manga,
                chapter_number: comment.chapter.chapter_number,
                id: comment.id
              ),
              method: :delete,
              data: { turbo_confirm: "Are you sure you want to delete this comment?",
                controller: "confirm",
                action: "confirm#confirm",
                confirm_title_value: "Delete Comment?",
                confirm_message_value: "This will permanently remove the comment.",
                confirm_confirm_text_value: "Yes, delete it!"
                     },
              class: "button is-small is-danger",
              form: { data: { turbo: true } } do %>
            Delete
          <% end %>
        </div>
      <% end %>
    </div>
    <p class="mt-2"><%= comment.body %></p>
  </div>
<% end %>
