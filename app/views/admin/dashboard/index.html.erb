<div class="container">
  <div class="box bg-full-transparent">
    <h1 class="title has-text-centered">
      <i class="fas fa-tools"></i> Admin Dashboard
    </h1>
    <p class="subtitle has-text-centered">Welcome to the admin area, <strong><%= current_user.username %></strong>!</p>

    <% if flash[:alert] %>
      <div class="notification is-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <div class="box bg-transparent">
      <h2 class="subtitle"><i class="fas fa-users"></i> All Users</h2>

      <!-- Responsive Table Wrapper -->
      <div class="table-container">
        <table class="table is-fullwidth bg-full-transparent">
          <thead>
            <tr>
              <th><i class="fas fa-user"></i> Username</th>
              <th><i class="fas fa-envelope"></i> Email</th>
              <th><i class="fas fa-user-tag"></i> Role</th>
              <th><i class="fas fa-cogs"></i> Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.role.capitalize %></td>
                <td class="has-text-centered">
                  <div class="buttons is-flex">
                    <%= link_to admin_edit_user_path(user), class: "button is-small" do %>
                      <i class="fas fa-edit"></i> Edit
                    <% end %>

                    <% if user != current_user %>
                      <%= button_to admin_delete_user_path(user), method: :delete, 
                          data: { turbo: false }, 
                          class: "button is-small is-danger", 
                          onclick: "return confirm('Are you sure you want to delete this user?')",
                          form: { style: 'display: inline-block;' } do %>
                        <i class="fas fa-trash"></i> Delete
                      <% end %>
                    <% else %>
                      <span class="tag is-info is-light">Current User</span>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="has-text-centered">
      <%= link_to "Back to Home", root_path, class: "button is-rounded is-fullwidth-mobile" %>
    </div>
  </div>
</div>