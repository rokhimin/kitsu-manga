<div class="main-content bg-full-transparent"></div>
  <div class="columns">
    <div class="column is-8">
      
      <!-- Announ -->
      <div class="manga-section bg-transparent">
        <div class="section-title">Announcement</div>
        <article class="message">
        <div class="message-header bg-full-transparent">
          <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.

              Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
          <button class="delete" aria-label="delete"></button>
        </div>
        </article>
      </div>

      <!-- Featured Manga -->
      <div class="manga-section bg-transparent">
        <div class="section-title">Featured Manga</div>
        <div class="scroll-container featured-scroll">
          <% featured_manga = Manga.order(rating: :desc).limit(10) %>
          <% if featured_manga.any? %>
            <% featured_manga.each do |manga| %>
              <div class="scroll-item">
                <div class="manga-box">
                  <a href="<%= manga_path(manga) %>">
                    <% if manga.image_cover.present? %>
                      <img src="<%= manga.image_cover %>" alt="<%= manga.title %>" class="manga-image">
                    <% else %>
                      <div class="manga-image"></div>
                    <% end %>
                    <div class="manga-title"><%= manga.title %></div>
                    <div class="manga-chapter"><%= manga.status %> • <%= manga.manga_type %></div>
                  </a>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="scroll-item">No featured manga available</div>
          <% end %>
        </div>
      </div>
      
      <!-- Latest Updates - Now Vertical -->
      <div class="manga-section bg-transparent">
        <div class="section-title">Latest Updates</div>
        <div class="vertical-scroll latest-vertical-scroll">
          <% latest_mangas = Manga.order(created_at: :desc).limit(12) %>
          <% if latest_mangas.any? %>
            <% latest_mangas.each do |manga| %>
              <div class="vertical-scroll-item bg-full-transparent">
                <div class="manga-box">
                  <a href="<%= manga_path(manga.title) %>">
                    <div class="columns is-mobile">
                      <div class="column is-4">
                        <% if manga.image_cover.present? %>
                          <img src="<%= manga.image_cover %>" alt="<%= manga.title %>" class="manga-image">
                        <% else %>
                          <div class="manga-image-small"></div>
                        <% end %>
                      </div>
                      <div class="column">
                        <div class="manga-title"><%= manga.title %></div>
                        <div class="manga-chapter"><%= manga.author %> • <%= manga.status %></div>
                      </div>
                    </div>
                  </a>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="vertical-scroll-item">No manga updates available</div>
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="column is-4">
      <!-- Popular This Week -->
      <div class="manga-section">
        <div class="section-title">Popular This Week</div>
        <% popular_mangas = Manga.order(created_at: :desc, rating: :desc).limit(5) %>
        <% popular_mangas.each_with_index do |manga, index| %>
          <div class="manga-box">
            <a href="<%= manga_path(manga) %>">
              <div class="columns is-mobile">
                <div class="column is-3">
                  <% if manga.image_cover.present? %>
                    <img src="<%= manga.image_cover %>" alt="<%= manga.title %>" class="manga-image">
                  <% else %>
                    <div class="manga-image"></div>
                  <% end %>
                  <div class="manga-rank">#<%= index + 1 %></div>
                </div>
                <div class="column">
                  <div class="manga-title"><%= manga.title %></div>
                  <div class="manga-chapter"><%= manga.genre %></div>
                  <div class="manga-rating">Rating: <%= manga.rating %>/10</div>
                </div>
              </div>
            </a>
          </div>
        <% end %>
        <% if popular_mangas.empty? %>
          <div class="manga-box">No popular manga available</div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  .manga-box {
    background-color: rgba(0, 0, 0, 0.15);
    padding: 5px;
    margin-bottom: 10px;
    border-radius: 5px;
    width: 100%;
    border-radius: 8px;
    overflow: hidden; 
    text-align: center;
  }
  
  .manga-section {
    margin-bottom: 20px;
  }
  
  .section-title {
    background-color: rgba(20, 20, 20, 0.27);
    padding: 5px 10px;
    margin-bottom: 10px;
    border-radius: 3px;
    font-weight: bold;
  }
  
  .manga-image {
    width: 100%;
    height: 150px;
    background-color: rgba(0, 0, 0, 0.14);
    margin-bottom: 5px;
    object-fit: cover;
  }
  
  .manga-image-small {
    width: 100%;
    height: 80px;
    background-color: rgba(0, 0, 0, 0.14);
    object-fit: cover;
    border-radius: 4px;
  }
  
  .manga-title {
    font-weight: bold;
    font-size: 0.9rem;
  }
  
  .manga-chapter {
    font-size: 0.8rem;
    color: #bbb;
  }
  
  .manga-rating {
    font-size: 0.8rem;
    color: #ffdd57;
  }
  
  .manga-rank {
    font-weight: bold;
    text-align: center;
  }
  
  .social-icons a {
    margin: 0 5px;
  }
  
  .main-content {
    padding: 20px;
  }
  
  a {
    color: inherit;
    text-decoration: none;
  }
  
  a:hover .manga-box {
    background-color: rgba(255, 255, 255, 0.1);
    transition: background-color 0.3s;
  }
  
  /* Horizontal scrolling styles */
  .scroll-container {
    display: flex;
    overflow-x: auto;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    padding: 5px 0;
    margin-right: 8px;
  }
  
  .scroll-container::-webkit-scrollbar {
    height: 6px;
  }
  
  .scroll-container::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    margin: 0 -10px;
  }
  
  .scroll-container::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
  }
  
  .scroll-container::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.3);
  }
  
  .scroll-item {
    flex: 0 0 auto;
    width: 2000px;
    margin: 0 10px;
  }
  
  .featured-scroll .scroll-item {
    width: 220px;
  }
  
  /* Vertical scrolling styles - NEW */
  .vertical-scroll {
    height: 400px;
    overflow-y: auto;
    padding-right: 10px;
  }
  
  .vertical-scroll::-webkit-scrollbar {
    width: 6px;
  }
  
  .vertical-scroll::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.1);
    border-radius: 10px;
  }
  
  .vertical-scroll::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
  }
  
  .vertical-scroll::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.3);
  }
  
  .vertical-scroll-item {
    margin-bottom: 10px;
  }
  
  .vertical-scroll-item .manga-box {
    display: block;
    text-align: left;
  }
  
  /* Mobile responsiveness */
  @media screen and (max-width: 768px) {
    .scroll-item {
      width: 150px;
    }
    
    .featured-scroll .scroll-item {
      width: 180px;
    }
    
    .manga-image {
      height: 120px;
    }
    
    .vertical-scroll {
      height: 350px;
    }
    
    .manga-image-small {
      height: 60px;
    }
  }
</style>